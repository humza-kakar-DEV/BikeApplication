<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.SmartBikeFyp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Custom.Outline.TextInput.Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
    </style>

    <style name="Custom.Outline.TextInput.DropDown.Style" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="startIconTint">@color/black</item>
    </style>

    <!--  CIRCLE IMAGE VIEW BACKGROUND  -->
    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--   CURVED IMAGE VIEW BACKGROUND   -->
    <style name="curvedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <!--    BOTTOM NAVIGATION FONT FAMILY     -->
    <style name="BottomNavigationView">
        <item name="fontFamily">@font/poppinsregular</item>
    </style>

    <!--    CHIP SINGLE SELECTION    -->
    <style name="my.custom.chip.style" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_choice_background_color</item>
        <item name="textAppearanceBody2">@style/TextAppearance.App.Body2</item>
    </style>

    <style name="TextAppearance.App.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/poppinssemibold</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="drawerLayoutNavigationMenuTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/poppinssemibold</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>